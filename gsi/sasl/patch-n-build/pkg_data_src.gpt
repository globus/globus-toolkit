<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE gpt_package_metadata SYSTEM "globus_package.dtd">
<gpt_package_metadata Format_Version="0.01" Name="globus_cyrus-sasl" >

  <Aging_Version Age="0" Major="0" Minor="7" />
  <Description> Globus binary package for sasl </Description>
  <Functional_Group >Security</Functional_Group>
  <Version_Stability Release="Experimental" />

  <src_pkg >

    <Build_Environment >
      <cflags ></cflags>
      <external_includes ></external_includes>
      <pkg_libs >-lsasl_$GLOBUS_FLAVOR_NAME</pkg_libs>
      <external_libs ></external_libs>
    </Build_Environment>

    <With_Flavors build="yes" />

    <Version_Label>1.5.27</Version_Label>
    <Source_Dependencies Type="compile" >
      <Dependency Name="globus_openssl"><Version><Simple_Version Major="1"></Simple_Version></Version></Dependency>
    </Source_Dependencies>
    <Source_Dependencies Type="compile" >
      <Dependency Name="globus_libtool"><Version><Simple_Version Major="1"></Simple_Version></Version></Dependency>
    </Source_Dependencies>
    
    <Source_Dependencies Type="lib_runtime" > 
    <Dependency Name="globus_sasl_gssapi_gsi" Package="rtl"><Version><Simple_Version Major="0"></Simple_Version></Version> </Dependency>
    </Source_Dependencies> 
    
    <Build_Instructions>

      <Build_Step>MAKE_GPTMACRO distclean</Build_Step>

      <Build_Step Macro_Args="libs='ssl crypto sasl plain'">
        RUN_FLAVOR_MAKEFILES_GPTMACRO
      </Build_Step>
	<Build_Step>touch aclocal.m4 config.h.in configure stamp-h.in</Build_Step>
	<Build_Step>find . -name "Makefile.in" -print | xargs touch</Build_Step>
      <Build_Step>CONFIGENV_GPTMACRO ./configure --prefix=INSTALLDIR_GPTMACRO --disable-gssapi  --disable-cram --disable-digest --disable-krb4 --disable-anon --without-pam --without-dblib --without-dbpath</Build_Step>
      <Build_Step>MAKE_GPTMACRO</Build_Step>
      <Build_Step>MAKE_GPTMACRO DESTDIR_GPTMACRO install</Build_Step>
      <Build_Step>RUN_FLAVOR_INSTALL_GPTMACRO</Build_Step>

    </Build_Instructions>

  </src_pkg >

</gpt_package_metadata>
