prefix=@prefix@
exec_prefix=@exec_prefix@
srcdir=@srcdir@
mandir=@mandir@
datadir=@datadir@
sysconfdir=@sysconfdir@
INSTALL=@INSTALL@
INSTALL_PROGRAM=@INSTALL_PROGRAM@
INSTALL_DATA=@INSTALL_DATA@
DOXYGEN=@DOXYGEN@

all:
	(cd support ; $(MAKE) all)
	(cd util/privatepw ; $(MAKE) all)
	(cd src ; $(MAKE) all)
	if [ ! -d bin ]; then mkdir bin; fi
	rm -f bin/ftpd bin/ftpshut bin/ftpcount bin/ftpwho bin/ckconfig bin/ftprestart bin/ftpmlsd
	@CPLN@ src/ftpd bin
	@CPLN@ src/ftpshut bin
	@CPLN@ src/ftpcount bin
	@CPLN@ src/ftpcount bin/ftpwho
	@CPLN@ src/ckconfig bin
	@CPLN@ src/ftprestart bin
	@CPLN@ src/ftpmlsd bin
	size bin/ftpd bin/ftpshut bin/ftpcount bin/ftpwho bin/ckconfig bin/ftprestart bin/ftpmlsd
	if test -n "$(DOXYGEN)"; then \
	    $(DOXYGEN) Doxyfile ; \
	fi
	$(MAKE) filelist

filelist:
	rm -f filelist
	cat fl > filelist
	if test -n "$(DOXYGEN)"; then \
	    cat fl.doxygen >> filelist ; \
	fi

clean:
	(cd support ; $(MAKE) clean)
	(cd util/privatepw ; $(MAKE) clean)
	(cd src ; $(MAKE) clean)
	-rm -rf bin
	-rm filelist
distclean: clean
	(cd support ; $(MAKE) distclean)
	(cd util/privatepw ; $(MAKE) distclean)
	(cd src ; $(MAKE) distclean)
	-rm -f *~
	-rm -f src/*~
	-rm -f support/*~
	-rm -f doc/*~
	-rm -f util/*~
	-rm -f config.log config.status config.cache Makefile config.h Doxyfile
install: all
	@echo installing binaries.
	-@mkdir -p $(DESTDIR)@sbindir@
	-@mkdir -p $(DESTDIR)@bindir@
	-@mkdir -p $(DESTDIR)$(mandir)/man8
	-@mkdir -p $(DESTDIR)$(mandir)/man1
	-@mkdir -p $(DESTDIR)$(mandir)/man5
	-@mkdir -p $(DESTDIR)$(datadir)/doc/globus_gsi_wuftpd/html
	-@mkdir -p $(DESTDIR)$(sysconfdir)
	@INSTALL_PROGRAM@ -m 755 bin/ftpd $(DESTDIR)@sbindir@/in.ftpd
	@INSTALL_PROGRAM@ -m 755 bin/ftpshut $(DESTDIR)@sbindir@/ftpshut
	@INSTALL_PROGRAM@ -m 755 bin/ftpcount $(DESTDIR)@bindir@/ftpcount
	@INSTALL_PROGRAM@ -m 755 bin/ftpwho $(DESTDIR)@bindir@/ftpwho
	@INSTALL_PROGRAM@ -m 755 bin/ckconfig $(DESTDIR)@sbindir@/ckconfig
	@INSTALL_PROGRAM@ -m 755 bin/ftprestart $(DESTDIR)@sbindir@/ftprestart
	@INSTALL_PROGRAM@ -m 755 bin/ftpmlsd $(DESTDIR)@bindir@/ftpmlsd
	@INSTALL_PROGRAM@ -m 755 util/privatepw/privatepw $(DESTDIR)@sbindir@/privatepw
	@echo installing manpages.
	-@mkdir -p $(mandir)
	@INSTALL_DATA@ -m 644 doc/ftpd.8 $(DESTDIR)$(mandir)/man8/ftpd.8
	@INSTALL_DATA@ -m 644 doc/ftpcount.1 $(DESTDIR)$(mandir)/man1/ftpcount.1
	@INSTALL_DATA@ -m 644 doc/ftpwho.1 $(DESTDIR)$(mandir)/man1/ftpwho.1
	@INSTALL_DATA@ -m 644 doc/ftpshut.8 $(DESTDIR)$(mandir)/man8/ftpshut.8
	@INSTALL_DATA@ -m 644 doc/ftpaccess.5 $(DESTDIR)$(mandir)/man5/ftpaccess.5
	@INSTALL_DATA@ -m 644 doc/ftphosts.5 $(DESTDIR)$(mandir)/man5/ftphosts.5
	@INSTALL_DATA@ -m 644 doc/ftpconversions.5 $(DESTDIR)$(mandir)/man5/ftpconversions.5
	@INSTALL_DATA@ -m 644 doc/ftpservers.5 $(DESTDIR)$(mandir)/man5/ftpservers.5
	@INSTALL_DATA@ -m 644 doc/xferlog.5 $(DESTDIR)$(mandir)/man5/xferlog.5
	@INSTALL_DATA@ -m 644 doc/ftprestart.8 $(DESTDIR)$(mandir)/man8/ftprestart.8
	@INSTALL_DATA@ -m 644 util/privatepw/privatepw.8 $(DESTDIR)$(mandir)/man8/privatepw.8
	@if test -w $(DESTDIR)$(sysconfdir); then \
	    if test ! -f $(DESTDIR)$(sysconfdir)/ftpaccess; then \
		 @INSTALL@ -c -m 644 doc/examples/ftpaccess \
				     $(DESTDIR)$(sysconfdir)/ftpaccess; \
	    fi ; \
	    if test ! -f $(DESTDIR)$(sysconfdir)/ftpconversions; then \
		@INSTALL@ -c -m 644 doc/examples/ftpconversions \
				    $(DESTDIR)$(sysconfdir)/ftpconversions; \
	    fi ; \
	fi
	if test -n "$(DOXYGEN)"; then \
	    for x in doc/html/*; do \
		base=`basename $$x` ; \
		docdir=$(DESTDIR)$(datadir)/doc/globus_gsi_wuftpd/html ; \
	        @INSTALL_DATA@ -m 644 $$x $$docdir/$$base ; \
	    done ; \
	fi
