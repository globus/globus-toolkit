# For gmake virtual path support
srcdir = @srcdir@
VPATH = @srcdir@

prefix=@prefix@
exec_prefix=@exec_prefix@
srcdir=@srcdir@
mandir=@mandir@
INSTALL=@INSTALL@

CC=@CC@
 
#WNOERROR=-Werror
#WARNINGS=$(WNOERROR) -Wall -Wpointer-arith -Wcast-align -Wstrict-prototypes -Wmissing-prototypes 

CFLAGS=$(WARNINGS) @CFLAGS@
LIBS=@LIBS@

all: privatepw

privatepw:   privatepw.c ../../src/COPYRIGHT.c ../../src/vers.c
	$(CC) $(CFLAGS) -L../../support $(LIBS) -I../../src -o $@ $(srcdir)/privatepw.c $(srcdir)/../../src/COPYRIGHT.c $(srcdir)/../../src/vers.c

install: $(BINDIR)/privatepw $(MANDIR)/privatepw.8

$(BINDIR)/privatepw: privatepw
	$(INSTALL) -o bin -g bin -m 755 ../../bin/privatepw $(sbindir)/privatepw

$(mandir)/privatepw.8:
	$(INSTALL) -o bin -g bin -m 644 $(srcdir)/privatepw.8 $(mandir)/man8/privatepw.8

clean:
	rm -f core *.o *.lint .depend edit
	rm -f privatepw 

distclean: clean
	rm -f Makefile

