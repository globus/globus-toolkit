print "MyProxy Test 32 (verify renewal policies): ";
if ($exitstatus == 0) {
    ($exitstatus, $output) =
	&verifyproxy("$tmpdir/myproxy-test.$$");
} elsif ($output =~ /self-authz not allowed/) {
    $exitstatus = 0;            # default policy will give this response
